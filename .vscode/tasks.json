{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Compile Windows",
			"command": "cl.exe",
			"args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/std:c++20",
                "/Fe:",
				"example/distances.exe",
				"example/distances.cpp"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
		},
		{
			"type": "shell",
			"label": "Compile Linux",
			"command": "g++",
			"args": [
                "-std=c++2a",
				"-g",
				"example/distances.cpp",
				"-o",
				"example/distances"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
		}
	]
}